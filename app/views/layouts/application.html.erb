  </head>

  <body>
  	<p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

   <%= render "shared/nav", location: 'top' %>

   <%= login_helper %>

   <%= yield %>

   <%= copyright_generator %>

  <%= source_helper("application") %>
